@startuml
class Client {
    - dni: String
    - nom: String
    - pin: String
    - intentsFallits: int
    - bloquejat: boolean

    + setDni(dni:String)
    + setPin(pin:String)
    + setNom(nom:String)
    + getDni(): String
    + getNom(): String
    + isBloquejat(): boolean

}

class compte {
    - numero: String
    - saldo: double
    - titular: String
    - interesAnual: double

    + setNumero(numero: String)
    + setSaldo(saldo: double)
    + setTitular(titular: String)
    + setInteresAnual(interesAnual: double)
    + isRetirar(quantitat: double): boolean
    + isTransfarencia(c: Compte, quantitat:double): boolean
    + getNumero(): String
    + getSaldo(): double
    + getTitular(): String
    + getInteresAnual(): double
}

@enduml